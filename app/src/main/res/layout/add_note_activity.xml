<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/save"
        android:text="@string/save"
        android:layout_alignParentBottom="true"
        style="@style/button"
        />

    <ScrollView
        android:layout_above="@id/save"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="16dp"
            >

            <androidx.cardview.widget.CardView
                style="@style/card_view"
                >

                <EditText
                    android:id="@+id/note_title_input"
                    android:hint="@string/note_title_hint"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    style="@style/form_input"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/date_picker_section"
                android:layout_marginTop="8dp"
                style="@style/card_view">

                <TextView
                    android:id="@+id/date_text"
                    style="@style/form_input"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/note_description_section"
                android:layout_marginTop="8dp"
                style="@style/card_view"
                >

                <EditText
                    android:id="@+id/note_description_input"
                    android:hint="@string/note_description_hint"
                    android:minLines="3"
                    android:gravity="center_vertical"
                    android:inputType="textCapSentences|textMultiLine"
                    style="@style/form_input"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
